rem ** Create Conditions **
aiStrategy.createConstantCondition NeutralCPCond Crisp EqualGreater Friendly NumberOfNeutralAreas 1
aiStrategy.setConditionStrength Advisory

aiStrategy.createConstantCondition EnemyCPCond Crisp EqualGreater Enemy ControlPoint 2
aiStrategy.setConditionStrength Advisory

rem ** cleanUp **
aiStrategy.createConstantCondition CleanEnemyCPCond Crisp EqualSmaller Enemy ControlPoint 1
aiStrategy.setConditionStrength Required

aiStrategy.createConstantCondition NoEnemyCond Crisp Equal Enemy ControlPoint 0
aiStrategy.setConditionStrength Required

aiStrategy.createConstantCondition NoNeutralCond Crisp Equal Friendly NumberOfNeutralAreas 0
aiStrategy.setConditionStrength Required

rem *** Create Prerequisites ***
aiStrategy.createPrerequisite EnemyPrereq
aiStrategy.addCondition EnemyCPCond    20.0
aiStrategy.addCondition NeutralCPCond  20.0

rem aiStrategy.createPrerequisite NeutralPrereq
rem aiStrategy.addCondition NeutralCPCond  20.0

aiStrategy.createPrerequisite GuardATPrereq
aiStrategy.addCondition NoEnemyCond   2.0
aiStrategy.addCondition NoNeutralCond   2.0

aiStrategy.createPrerequisite CleanPrereq
aiStrategy.addCondition CleanEnemyCPCond    5.0
aiStrategy.addCondition NoEnemyCond   2.0

rem *** Create Strategies ***
aiStrategy.createStrategy GuardAT
aiStrategy.Aggression 1
aiStrategy.NumberOfAttacks 1
aiStrategy.NumberOfDefences 4
aiStrategy.setStrategicObjectsModifier ControlPoint      15.0 Owned
aiStrategy.setPrerequisite GuardATPrereq

aiStrategy.createStrategy AttackEnemy
aiStrategy.Aggression 3
aiStrategy.NumberOfAttacks 3
aiStrategy.NumberOfDefences 0
aiStrategy.setStrategicObjectsModifier ControlPoint      15.0 Hostile
aiStrategy.setStrategicObjectsModifier ControlPoint      12.0 Neutral
aiStrategy.setPrerequisite EnemyPrereq

rem aiStrategy.createStrategy AttackNeutral
rem aiStrategy.Aggression 2
rem aiStrategy.NumberOfAttacks 3
rem aiStrategy.NumberOfDefences 0
rem aiStrategy.setStrategicObjectsModifier ControlPoint      10.0 Hostile
rem aiStrategy.setStrategicObjectsModifier ControlPoint      12.0 Neutral
rem aiStrategy.setPrerequisite NeutralPrereq

aiStrategy.createStrategy CleanUp
aiStrategy.Aggression 1
aiStrategy.NumberOfAttacks 2
aiStrategy.NumberOfDefences 3
aiStrategy.setStrategicObjectsModifier ControlPoint      10.0 Hostile
aiStrategy.setStrategicObjectsModifier ControlPoint      20.0 Neutral
aiStrategy.setPrerequisite CleanPrereq

rem *** Add Strategies ***
rem --- MEC/CHINA ---
ai.addSAIStrategy 1 AttackEnemy
ai.addSAIStrategy 1 AttackNeutral
ai.addSAIStrategy 1 GuardAT
ai.addSAIStrategy 1 CleanUp

rem --- US ---
ai.addSAIStrategy 2 AttackEnemy
ai.addSAIStrategy 2 AttackNeutral
ai.addSAIStrategy 2 GuardAT
ai.addSAIStrategy 2 CleanUp